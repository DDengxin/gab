.menu {
    position: relative;
    cursor: pointer;    
    background: #42485b;
    color: #fff;
}

ul, li 
{
    position:relative;
    list-style: none;
    padding: 0;
    margin: 0;
}

.menu-title {
    display: block;
    line-height: 36px;
}
.menu-title:hover {
    background: #00C1DE;
}
/*.menu-title:hover {
    background: #4a5064;
}*/

.menu-arrow {
    position: absolute;
    top: 0;
    right: 10px;
    font-size: 14px;
}

.menu-arrow:after {
    content: "\e804";    
}

.open > a > .menu-arrow:after {
    content: "\e756";    
}

.menu-text
{
    padding-left:6px;
}

.menu ul
{
    display:none;
}

.menu .open > ul
{
    display:block;
}

.menu ul
{
    background-color: #333744;    
}

.menu-title
{
    padding-left:8px;
}

.menu ul .menu-title
{
    padding-left:20px;
}

.menu ul ul .menu-title
{
    padding-left:32px;
}
