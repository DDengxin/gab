    @Override
    public boolean judgeUnique(SysRight sysRight) {
        return sysRightDao.findAll(Specifications.where((c) -> {
            c.eq("parentId", sysRight.getParentId());
            c.eq("rightName", sysRight.getRightName());
        })).size() <= 0;
    }

