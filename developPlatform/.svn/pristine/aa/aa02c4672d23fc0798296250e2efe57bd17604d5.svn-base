    //递归删除
    private void Recursive(List<Map<String, Object>> list) {
        if (list != null) {
            list.forEach(item -> {
                sysRightDao.deleteByRightId(ObjectUtil.isEmpty(item.get("rightId")) ? "-1" : item.get("rightId").toString());
                Recursive((List<Map<String, Object>>) item.get("children"));
            });
        }
    }

