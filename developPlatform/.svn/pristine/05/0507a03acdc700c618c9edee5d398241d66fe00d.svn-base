	@Override
	public Result getFlag(String fhNote, String flag) {
		String flagString=saleDeliveryNoticeDao.getFlag(fhNote);
		if(flag.equals(flagString)) {
			return  Result.resultOk("操作成功！");
		}
		return  Result.error("该单不是“"+flag+"”状态,不能操作！");
	}

