	 @Override
	    public boolean judgeUnique(payment payment) {
	        return gatheringDao.findAll(Specifications.where((c) -> {
	            c.eq("sfkNote", payment.getSfkNote());
			/*
			 * c.lt("fprq1", invoice.getFpRq()); c.gt("fprq2", invoice.getFpRq());
			 */
	        })).size() <= 0;
	    }
	 
