<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
      xmlns:tz="http://www.w3.org/1999/xhtml">
<head>
    <th:block
            th:replace="~{model/Head :: head(~{::title},_,_,${'miniui,common'})}">
        <title>培训计划</title>
    </th:block>
</head>
<body>
<th:block th:replace="~{model/SearchBar :: SearchBar('form_home',~{::content})}">
    <th:block th:fragment="content">
        <label class="hmq-label" text="培训方式">
            <input class="mini-combobox" name="jhFrom" id="jhFrom" url="/system/parameter/getParamsSelectListByParentId/人事/培训方式/PXFS"
                   onvaluechanged="onParamModValueChanged" nullItemText="全部" showNullItem="true" width="100"/>
        </label>
        <label class="hmq-label" text="培训单号"> <input
                class="mini-textbox" name="jhNote"/>
        </label>
    </th:block>
</th:block>
<!--撑满页面-->
<div class="mini-fit">
    <div tz:datagrid="datagrid" id="srch_grid" idField="jhNote" showPageInfo="false">
        <div property="columns">
            <div tz:datagrid="indexcolumn"></div>
            <div tz:datagrid="column" field="jhNy"  align="left" width="120" >培训月度</div>
            <div tz:datagrid="column" field="jhNote" align="center" width="100">单号</div>
            <div tz:datagrid="column" field="jhTitle"  align="left" width="260">培训主题</div>
            <div tz:datagrid="column" field="jhType"  align="center" width="70">培训类型</div>
            <div tz:datagrid="column" field="jhFrom"  align="center" width="70" >培训方式</div>
            <div tz:datagrid="column" field="jhObject" align="left" width="70">培训对象</div>
            <div tz:datagrid="column" field="jhDept"  id="jhDept" align="left" width="80">责任部门</div>
            <div tz:datagrid="column" field="jhTrainingContent" align="left" width="120" visible="false">培训内容</div>
            <div tz:datagrid="column" field="jhEstimatedCost"  align="right" width="100">预计费用</div>
            <div tz:datagrid="column" field="jhTrainingLevel" align="center" width="70">培训级别</div>
            <div tz:datagrid="column" field="jhTrainingAddress" align="left" width="260">培训地址</div>
            <div tz:datagrid="column" field="jhFlag"  align="center" width="70">状态</div>
            <div tz:datagrid="column" field="dataMan" align="left" width="80" >操作人</div>
            <div tz:datagrid="column" field="dataCorp"  align="left" width="160">操作公司</div>
            <div tz:datagrid="column" field="jhTime" align="left" width="80" >培训时间</div>
            <div tz:datagrid="column" field="dataDate" align="center" width="80" >操作日期</div>
            <div tz:datagrid="column" field="jhCourseLength" align="right" width="60">培训时长</div>
            <div tz:datagrid="column" field="jhTrainingOrder" align="right" width="60">排序</div>
            <div tz:datagrid="column" width="100%"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    mini.parse();
    var form = new mini.Form("form_home");
    var grid = mini.get("srch_grid");
    grid.bindSearchForm(form);

    /**
     * 查询
     **/
    function search_option() {
        grid.load();
    }
    /**
     * 合并指定行
     * */
    grid.on("load", function () {
        grid.mergeColumns(["jhNy"]);
    });
    /**
     * 查阅
     * */
    function view_option(e) {
        var row = grid.getSelected();
        console.log(row);
        if (row) {
            e.sender.miniopen({url: 'pxjhAdd.html', action: 'view', data: row});
        } else {
            hmq.tipDanger("请选择一条记录");
        }
    }

    /* 添加 */
    function add_option(e) {
        var row = grid.getSelected();
        e.sender.miniopen({url: "pxjhAdd.html", action: 'add', data: row});
    }

    /* 修改 */
    function edit_option(e) {
        var row = grid.getSelected();
        console.log(row);
        if (row) {
            e.sender.miniopen({url: 'pxjhAdd.html', action: 'edit', data: row});
        } else {
            hmq.tipDanger("请选择一条记录");
        }
    }

    /* 删除 */
    function delete_option() {
        var row = grid.getSelected();
        if (row) {
            mini.confirm("确定要删除吗？", "删除信息", function (action) {
                if ('登记' != row.jhFlag) {
                    hmq.tipDanger("非登记状态不允许操作");

                } else if (action == "ok") {
                        $['delete']("deleteByNote/{0}".format(row.jhNote), function (res) {
                            if (200 === res.code) {
                                grid.reload();
                            } else {
                                hmq.tipDanger(res.msg);
                            }
                        });
                    }
            });

        } else {
            hmq.tipDanger("请选择一条记录");
        }
    }
    /*状态确认*/
    function confirm_option() {
        var row = grid.getSelected();
        if (row) {
            if ('登记' != row.jhFlag) {
                hmq.tipDanger("当前状态不允许操作");
            } else {
                $['put']("getJhFlag", JSON.stringify({"params": mini.encode({jhNote: row.jhNote})}),
                    function (res) {
                        hmq.business.approvalConfirm({
                            //  title: "确认记录",
                            businessId: row.jhNote,
                            url: "/personnel/personnelTraining/trainingPlan/pxjhAdd.html",
                            error: function (res) {
                                if (res.code == 404) {
                                    $['put']("ok/{0}".format(row.jhNote), function (res) {
                                        if (200 === res.code) {
                                            grid.reload();
                                        } else {
                                            hmq.tipDanger(res.msg);
                                        }
                                    });
                                } else {
                                    hmq.tipDanger(res.msg);
                                }
                            }
                        });
                    }, null, {
                        contentType: 'application/json'
                    });
            }
        } else {
            hmq.tipDanger("请选择一条记录");
        }
    }

    /*确认取消*/
    function cancel_option() {
        var row = grid.getSelected();
        if (row) {
            var params = {
                jhNote: row.jhNote,
                jhFlag: "确认"
            };
            $['put']("getJhFlag", JSON.stringify({"params": mini.encode(params)}),
                function (res) {
                    mini.unmask();
                    if (200 === res.code) {
                        mini.confirm("是否取消确认吗？", "确认信息", function (action) {
                            if (action == "ok") {
                                hmq.business.approvalCancel({
                                    businessId: row.jhNote,
                                    error: function (res) {
                                        if (res.code == 404) {
                                            $['put']("no/{0}".format(row.jhNote), function (res) {
                                                if (200 === res.code) {
                                                    grid.reload();
                                                } else {
                                                    hmq.tipDanger(res.msg);
                                                }
                                            });
                                        } else {
                                            hmq.tipDanger(res.msg);
                                        }
                                    }
                                });
                            }
                        });
                    } else {
                        hmq.tipDanger(res.msg);
                    }
                }, null, {
                    contentType: 'application/json'
                });
        } else {
            hmq.tipDanger("请选择一条记录");
        }

    }
</script>


</body>
</html>