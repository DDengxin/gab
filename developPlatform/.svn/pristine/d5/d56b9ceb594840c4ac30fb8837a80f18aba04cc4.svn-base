    function validateData() {
        if (debittotal.toFixed(2) != credittotal.toFixed(2)) {
            minitips("系统提示", "借贷不平衡不能保存,请修正！", "danger");
            return false;
        }
        var row = grid.getRow(0);
        if (!row.fexplanation) {
            var column = grid.getColumn(1, "fexplanation");
            minitips("系统提示", "第一条分录摘要不能为空！", "danger");
            /*    	 var cell=[row, column];
             grid.setCurrentCell(cell);
             var ax=grid.getCurrentCell();
             grid.beginEditCell(ax);	 */
            return false;
        }
        //grid.getData().length 获取当页记录数
        //grid.getTotalCount()  获取总记录数
        for (var i = 0; i < grid.getTotalCount(); i++) {
            var row = grid.getRow(i);
            if (!row.famount) {
                minitips("系统提示", "不能为空！", "danger");
                return false;
            }
        }

        form.validate();
        if (form.isValid() == false) {
            return false;
        }
        grid.validate();
        if (grid.isValid() == false) {
            var error = grid.getCellErrors()[0];
            minitips("系统提示", error.errorText, "danger");
            grid.beginEditCell(error.record, error.column);
            return false;
        }
     /*   
      //开放头部修改限制
        if (grid.getChanges() == "") {
            minitips("系统提示", "数据没有改变，无需保存", "danger");
            return false;
        } */
        if (grid.getData() == "") {
            minitips("系统提示", "没有明细数据，无需保存", "danger");
            return false;
        }
        return true;
    }

    /**
