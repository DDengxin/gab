    }*/

    /*
    * 确认
    * */
    function confirm_option(e) {
        var row = grid.getSelected();
        if (row) {
            if('登记' != row.flag){
                hmq.tipDanger("当前状态不允许操作");
            }else{
                hmq.business.approvalConfirm({
                    businessId: row.note,
                    url: 'add.html',
                    error: function (res) {
                        if (res.code == 404) {
                            $['put']("updateFlag/{0}/{1}".format(row.sid,row.flag), function (res) {
                                if (200 === res.code) {
                                    grid.reload();
                                    hmq.tipDanger(res.msg);
                                } else {
                                    hmq.tipDanger(res.msg);
                                }
                            });
                        }else{
                            hmq.tipDanger(res.msg);
                        }
                    }
                });
            }
        }else{
            hmq.tipDanger("请选择一条记录");
        }
    }

    function cancel_option() {
        var row = grid.getSelected();
        if (row) {
            if ( '确认' != row.flag) {
                hmq.tipDanger("当前状态不允许操作");
            } else {
                hmq.business.approvalCancel({
                    businessId: row.note,
                    error: function (res) {
                        if (res.code == 404) {
                            $['put']("updateFlag/{0}/{1}".format(row.sid,row.flag), function (res) {
                                if (200 === res.code) {
                                    grid.reload();
                                    hmq.tipDanger(res.msg);
                                } else {
                                    hmq.tipDanger(res.msg);
                                }
                            });
                        }else{
                            hmq.tipDanger(res.msg);
                        }
                    }
                });
            }
        } else {
            hmq.tipDanger("请选择一条记录");
        }
    }




</script>





</body>
</html>