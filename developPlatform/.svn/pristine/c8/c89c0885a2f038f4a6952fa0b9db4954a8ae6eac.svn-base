	<script type="text/javascript">
		mini.parse();
		var form = new mini.Form("add_form");
		var surl = "/cw/ba/pzgl/settings/subject";
		var grid = null;
		var isminichange = false;//用来控制关闭后是否刷新主界面  

		function onActivechanged(e) {
			grid = mini.get("add_grid" + e.index);
			search_option(e.index, e.tab.title);
		}

		/**
		查询方法
		 */
		function search_option(index, tabname) {
			var parm = {
				tabname : tabname
			};
			$.ajax({
				url : surl + "/getSrchGridList.do",
				type : 'post',
				data : {
					parms : mini.encode(parm),
					stime : (new Date()).getTime()
				},
				cache : false,
				success : function(data) {
					var list = data.data;
					grid.loadList(list, "faccountid", "fparentid");
				},
				error : function(jqXHR, textStatus, errorThrown) {
					minitips("系统提示", "网络请求失败", "danger");
				}
			});

		}

		//控制是否刷新主界面
		function isRefrush(isminichange) {
			if (isminichange) {
				if (window.CloseOwnerWindow)
					return window.CloseOwnerWindow("refrush");
				else
					window.close();
			} else {
				if (window.CloseOwnerWindow)
					return window.CloseOwnerWindow("close");
				else
					window.close();
			}
		}
		//修改关闭窗口时提示数据保存
		function CloseWindow(action) {
			if (action == "close" && form.isChanged()) {
				mini.confirm("数据被修改了，是否先保存？", "提示信息", function(returndata) {
					if (returndata != "ok") {
						isRefrush(isminichange);
					}
				});
				return false;
			}
			isRefrush(isminichange);
			if (window.CloseOwnerWindow)
				return window.CloseOwnerWindow(action);
			else
				window.close();
		}
		function onCancel(e) {
			CloseWindow("close");
		}

		function GetData() {
			var node = grid.getSelectedNode();
			return node;
		}
		function search() {
			var key = mini.get("key").getValue();
			if (key == "") {
				grid.clearFilter();
			} else {
				key = key.toLowerCase();
				grid.filter(function(node) {
					var text = node.text ? node.text.toLowerCase() : "";
					if (text.indexOf(key) != -1) {
						return true;
					}
				});
			}
		}
		function onKeyEnter(e) {
			search();
		}
		function onNodeDblClick(e) {
			onOk();
		}
		//////////////////////////////////
		function CloseWindow(action) {
			if (window.CloseOwnerWindow)
				return window.CloseOwnerWindow(action);
			else
				window.close();
		}

		function onOk() {
			var node = grid.getSelectedNode();
			if (node && grid.isLeaf(node) == false) {
				alert("不能选中父节点");
				return;
			}

			CloseWindow("ok");
		}
		function onCancel() {
			CloseWindow("cancel");
		}
	</script>
