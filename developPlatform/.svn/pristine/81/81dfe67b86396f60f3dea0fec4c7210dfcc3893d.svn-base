                        layer.msg('开始节点和结束节点都只能有一个！！！');
                        resultNodeflag = false;
                        return;
                    }
                }

                if (el._attrs.model.processType != '1' && el._attrs.model.processType != '3' && el._attrs.model.transactorType != '4') {
                    if (el._attrs.model.transactor == '') {
                        layer.msg('节点中的表达式或者人员必填！！！')
                        resultExflag = false;
                        return;
                    }
                }
            })


            var saveData = net.save();
            sourceNodesData = saveData.source.nodes;
            sourceEdgesData = saveData.source.edges;

            /**
			 * sourceEdgesData:所有的线条的集合
			 * 删除起始节点和结束节点都为同一节点的线条
			 */
			for (var i = 0; i < sourceEdgesData.length; i++) {
				if (sourceEdgesData[i].source == sourceEdgesData[i].target) {
					sourceEdgesData.splice(i, 1);
				}
			}

            nodesData.map(function (e) {
                sourceNodesData.map(function (el) {
                    if (e.associatedId === el.id) {
                        e.x = el.x;
                        e.y = el.y;
                        e.whetherToSkip = el.whetherToSkip;
                    }
                })
            });

            if (mid == false) {
                edgesData.map(function (e) {
                    sourceEdgesData.map(function (el) {
                        if (e.associatedId === el.id) {
                            e.linkStratId = el.source;
                            e.linkEndId = el.target;
                        }
                    })
                });
                sourceNodesData.map(function (el) {
                    edgesData.map(function (e) {
                        if (el.id == e.linkStratId) {
                            e.linkStratName = el.label
                        }
                        if (el.id == e.linkEndId) {
                            e.linkEndName = el.label
                        }
                    })
                })
            } else {
                edgesData.map(function (e) {
                    sourceEdgesData.map(function (el) {
                        if (e.associatedId === el.id) {
                            e.linkStratId = el.source;
                            e.linkEndId = el.target;
                            e.controlPoints = JSON.stringify(el.controlPoints).replace(/"/g, '\\"');
                        }
                    })
                });
                sourceNodesData.map(function (el) {
                    edgesData.map(function (e) {
                        if (el.id == e.linkStratId) {
                            e.linkStratName = el.label
                        }
                        if (el.id == e.linkEndId) {
                            e.linkEndName = el.label
                        }
                    })
                })
            }


            var jsonData = {};

            // 流程详情必填resultDescflag
            if (workDescData[0].processClassify == '' || workDescData[0].processClassifyId == '' || workDescData[0].processDescribe == '' || workDescData[0].processModule == '' || workDescData[0].processName == '' || workDescData[0].processSystemType == '') {
                layer.msg('流程详情相关所有内容必填');
                resultDescflag = false;
                return;
