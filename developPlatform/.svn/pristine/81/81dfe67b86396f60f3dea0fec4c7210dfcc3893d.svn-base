            copyEdges = resultEdges;

            for (var i = 0; i < copyEdges.length; i++) {
                for (var j = 0; j < flowEdgesArr.length; j++) {
                    if (copyEdges[i].associatedId == flowEdgesArr[j]) {
                        edgesDataOld.push(copyEdges[i]);
                        copyEdges.splice(i, 1)
                    }
                }
            }

         	// 删除单分支线条的流程条件和条件表达式名称
            copyEdges.map(function (el) {
                resultEdges.map(function (e) {
                    if (el.associatedId == e.associatedId) {
                        e.conditionsContent = '';
                        e.conditions = '';
                    }
                })
            })


            jsonData.nodes = resultNodes;
            jsonData.edges = resultEdges.concat(edgesDataOld);


            if (nothing && resultDescflag && resulYlflag && resultNodeflag && resultExflag && resultFzflag) {
                $.ajax({
                    url: '/system/workflow/process/saveProcess' + '?time=' + time,
                    type: 'POST',
                    dataType: 'json',
                    data: JSON.stringify(jsonData),
                    contentType: 'application/json',
                    success: function (res) {
                        if (res.code == 200) {
                            layer.msg('操作成功！！！');
                            setTimeout(function () {
                                return window.CloseOwnerWindow('refresh');
                            }, 3500); 
                        }
                    }
                })
            }
        });
    </script>

</body>

