<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" xmlns:tz="http://www.w3.org/1999/xhtml">
<head>
<th:block th:replace="~{model/Head :: head(~{::title},_,_,${'miniui,common'})}">
	<title>凭证科目</title>
</th:block>
</head>
<body>
	<form id="form_home">
		<th:block th:replace="~{model/SearchBar :: SearchBar('form1',~{::content})}">
			<th:block th:fragment="content">
				<label class="hmq-label" text="种类">
					<input class="mini-combobox" name="accoutgroup" id="accoutgroup" textField="combtext" valueField="combid" url="/finance/voucher/accout/actGrouplist" onvaluechanged="onHtItemClassChanged" nullItemText="全部" showNullItem="true"/>
				</label>

			</th:block>
		</th:block>
	</form>
	<!--撑满页面-->
	<div class="mini-fit">
		<div tz:datagrid="datagrid" id="srch_grid" idField="" url="/finance/voucher/accout/list">
			<div property="columns">
				<div tz:datagrid="indexcolumn"></div>
				<div tz:datagrid="column" field="dataCorp" width="200">序号</div>
				<div tz:datagrid="column" field="fnumber" width="200">编码</div>
				<div tz:datagrid="column" field="fname" width="200">名称</div>
				<div tz:datagrid="column" field="ffullname" width="200">全称</div>
				<div tz:datagrid="column" field="fgroupidname" width="200">类别</div>
				<div tz:datagrid="column" field="fdc_n" width="200">余额方向</div>
				<div tz:datagrid="column" field="fzhs" width="200">辅助核算</div>
<!--				<div tz:datagrid="column" field="fparentid" width="200">父级ID</div>-->
<!--				<div tz:datagrid="column" field="ffullnumber" width="200">全编码</div>-->
<!--				<div tz:datagrid="column" field="flevel" width="200">层级</div>-->
<!--				<div tz:datagrid="column" field="fdetail" width="200">是否明细</div>-->
<!--				<div tz:datagrid="column" field="fusebstable" width="200">是否使用业务表</div>-->
<!--				<div tz:datagrid="column" field="ftable" width="200">业务表名</div>-->
<!--				<div tz:datagrid="column" field="fnumberfield" width="200">编码字段</div>-->
<!--				<div tz:datagrid="column" field="fnamefield" width="200">名称字段</div>-->
<!--				<div tz:datagrid="column" field="fflagfield" width="200">状态字段</div>-->
<!--				<div tz:datagrid="column" field="fwherefield" width="200">数据限定字段</div>-->
<!--				<div tz:datagrid="column" field="fwherevalue" width="200">限定字段值</div>-->
				<div tz:datagrid="column" width="100%"></div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
    mini.parse();
    var form = new mini.Form("form_home");
    var grid = mini.get("srch_grid");
    grid.bindSearchForm(form);
    function search_option() {
        grid.load();
    }
    grid.on("DrawCell", function (e) {
        if (e.field == "containsAttachment") {
			e.cellHtml = e.value ? '是' : '否';
        }
    });
    
    function add_option(e) {
        var row = grid.getSelected();
        e.sender.miniopen({url: "acadd.html", action: 'add', data: row,width:'480px',height:'450px'});
    }

    function edit_option(e) {
        var row = grid.getSelected();
        if (row) {
            e.sender.miniopen({url: "acadd.html", action: 'edit', data: row,width:'480px',height:'450px'});
        } else {
            hmq.tipDanger("请选择一条记录");
        }
    }

    /**
     * 删除
     **/
    function delete_option(){
        var row = grid.getSelected();
        if (row) {
            mini.confirm("确定要删除吗？", "删除信息", function (action) {
                if (action == "ok") {
                    $['delete']("/finance/voucher/auxiliaryitems/auxiliaryItems/{0}".format(row.fitemid), function (res) {
                        if (200 === res.code) {
                            grid.reload();
                        } else {
                        	
                            hmq.tipDanger(res.msg);
                        }
                    });
                }
            });
        } else {
            hmq.tipDanger("请选择一条记录");
        }
    }
</script>
</body>
</html>