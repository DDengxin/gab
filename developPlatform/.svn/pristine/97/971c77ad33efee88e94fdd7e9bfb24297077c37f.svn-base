<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" xmlns:tz="http://www.w3.org/1999/xhtml">
<head>
    <th:block th:replace="~{model/Head :: head(~{::title},_,_,${'miniui,common'})}">
        <title>企业通讯录</title>
    </th:block>
</head>
<body>
<th:block th:replace="~{model/SearchBar :: SearchBar('form_home',~{::content})}">
    <th:block th:fragment="content">
        <input class="mini-hidden" id="currentOrgId" name="currentOrgId" value="true">
        <label class="hmq-label" text="员工编码">
            <input class="mini-textbox" name="workerId" width="100"/>
        </label>
        <label class="hmq-label" text="员工姓名">
            <input class="mini-textbox" name="workerName" width="100"/>
        </label>
        <label class="hmq-label" text="员工部门">
            <input id="workerDept" name="workerDept" class="mini-treeselect" multiSelect="false" valueFromSelect="false"
                   url="/system/dept/combobox/getDeptTreeList"
                   showClose="true" oncloseclick="onCloseClickClearValue"/>
        </label>
    </th:block>
</th:block>
<!--撑满页面-->
<div class="mini-fit">
    <div tz:datagrid="treegrid" id="srch_grid" sortField="workerId" treeColumn="workerName" parentField="workerDept"  idField="workerId"
         showPageInfo="false"  resultAsTree="true" iconField="rightIconCls"
         expandOnLoad="0" showTreeLines="true" ShowTreeicon="false" >
        <div property="columns">
<!--            <div tz:datagrid="indexcolumn" width="48">序号</div>-->
<!--            <div tz:datagrid="column" field="workerCorpid" displayField="workerCorpName" name="workerCorpid" width="100" align="left">公司</div>-->
<!--            <div tz:datagrid="column" field="workerDept" displayField="workerDeptName" name="workerDept" width="100" align="left">部门</div>-->
<!--            <div tz:datagrid="column" field="workerId" name="workerId" align="center" width="100">工号</div>-->
<!--            <div tz:datagrid="column" field="workerName" name="workerName" align="left" width="100">姓名</div>-->
<!--            <div tz:datagrid="column" field="workerSex" name="workerSex" width="40" align="center">性别</div>-->
<!--            <div tz:datagrid="column" field="workerPhone" name="workerPhone" width="150" align="center">电话</div>-->
<!--                       <div tz:datagrid="column" field="parentId" name="parentId" align="left" width="100">姓名</div>-->
                        <div tz:datagrid="column" field="workerName" name="workerName" align="left" width="180">名称</div>
                        <div tz:datagrid="column" field="workerId" name="workerId" align="left" width="100">编号</div>
                        <div tz:datagrid="column" field="workerPhone" name="workerPhone" align="left" width="100">电话</div>
                        <div tz:datagrid="column" field="workerFixedLineTelephone" name="workerFixedLineTelephone" align="left" width="100">座机</div>
                        <div tz:datagrid="column" field="workerWeChat" name="workerWeChat" align="left" width="140">微信</div>
                        <div tz:datagrid="column" field="workerEmail" name="workerEmail" align="left" width="180">邮箱</div>
                        <div tz:datagrid="column" field="workerFaxNumber" name="workerFaxNumber" align="left" width="180">传真</div>
<!--                        <div tz:datagrid="column" field="workerSex" name="workerSex" align="center" width="60">性别</div>-->








            <div tz:datagrid="column" width="100%"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    mini.parse();
    var form = new mini.Form("form_home");
    var grid = mini.get("srch_grid");
    grid.bindSearchForm(form);
    //grid.frozenColumns ( 1, 6 );
    //拦截加载事件，加载树形结构
    grid.on('load', function (e) {
        grid.loadList(JSON.parse(e.text).data);
    });

    grid.on("DrawCell", function (e) {
        if (e.field == "state") {
            e.cellHtml = e.value ? '是' : '否';
        } else if (e.field == "workerSex") {
            if(e.value!=""){
                e.cellHtml = 'true' == e.value ? '男' : '女';
            }
        }
    });

    function search_option() {
        grid.load();
    }

    /**
     *  部门选择
     * */
    function onDeptClickHander(e) {
        var btnEdit = e.sender;
        return miniopen({
            targetWindow: window.top,
            url: "/system/dept/hierarchyDeptTree.html",
            title: "【部门】选择",
            data: "root",
            width: 500,
            height: 620,
            ondestroy: function (action) {
                if (action == "ok") {
                    var iframe = this.getIFrameEl();
                    var data = iframe.contentWindow.GetData();
                    btnEdit.setValue(data.deptId);
                    btnEdit.setText(data.deptName);
                }
            }
        });
    }

    function print_option(e) {
        e.sender.miniopen({url: "print.html", action: 'print', data: {}, width: 1100, height: 700});
    }

</script>
</body>
</html>