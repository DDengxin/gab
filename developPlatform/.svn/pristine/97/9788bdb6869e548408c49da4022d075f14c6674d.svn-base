<!doctype html>
<html xmlns:th="http://www.thymeleaf.org" xmlns:tz="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8">
    <title></title>
    <script th:src="@{/static/script/jquery/jquery-1.12.4.min.js}"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: '微软雅黑';
        }

        html,
        body {
            width: 100%;
            height: 100%;
        }

        .container {
            width: 100%;
            height: 100%;
            padding: 15px;
            position: relative;
        }

        p {
            text-align: center;
            position: relative;
        }

        p b {
            font-weight: normal;
            position: absolute;
            left: 138px;
            top: 30px;
        }

        p textarea {
            position: absolute;
            right: 118px;
            top: 30px;
            padding: 10px;
            border-radius: 5px;
        }

        .sure {
            text-align: center;
            position: absolute;
            bottom: 39px;
            left: 50%;
            margin-left: -35px;
        }

        button {
            border: 1px solid #666;
            background: #fff;
            padding: 0 30px;
            border-radius: 5px;
            height: 25px;
            line-height: 23px;
            /* margin-top: 22px; */
            display: inline-block;
        }
    </style>
</head>

<body>

    <div class="container">
        <p>
            <b>请输入：</b>
            <textarea name="" id="workflowContent" cols="45" rows="14"></textarea>
        </p>
        <div class="sure">
            <button class="layui-btn layui-btn-primary" id="transmit">确定</button>
        </div>
    </div>

    <script>
        var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
        //给父页面传值
        $('#transmit').on('click', function () {
            var value = $('#workflowContent').val();
			parent.GetData(value);
            parent.$('#edgeContent').val($('#workflowContent').val());
            // parent.layer.tips('Look here', '#peoName', { tips: [4, 'rgb(21,160,245)'], time: 3000 });
            parent.layer.close(index);
        });
    </script>


</body>

</html>