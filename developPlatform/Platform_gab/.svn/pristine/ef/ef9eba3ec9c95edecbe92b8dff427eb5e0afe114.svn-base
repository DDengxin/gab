                success: function (res) {
                    if (200 === res.code) {
                        layer.close(index1);
                        layer.msg(res.msg, {time: 5000, icon: 6});
                    } else {
                        layer.close(index1);
                        layer.msg(res.msg, {time: 5000, icon: 5});
                    }
                }, error: function (data) {
