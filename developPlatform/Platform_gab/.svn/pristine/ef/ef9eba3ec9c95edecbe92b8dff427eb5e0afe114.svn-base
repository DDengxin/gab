                    layer.msg(res.data || '操作成功', {time: 5000, icon: 6});
                    //数据重置
                    // _restDataPage(all_data);
                    // window.location.reload();
                    // sleep(10000);
                    setTimeout(function(){window.location.href="/gabLogin";},3000)


                }
            }, error: function (data) {
