.needs_content {
    width: 100%;
    overflow: hidden;
    margin-top: 125px;
}

.needs_content_list {
    width: 1200px;
    overflow: hidden;
    margin: 0 auto;
    padding-bottom: 115px;
}

.needs_content_list h2 {
    width: 100%;
    padding-bottom: 10px;
    border-bottom: 1px solid #d7d7d7;
    font-size: 18px;
    color: #333333;
    position: relative;
    padding-left: 15px;
    font-weight: bold;
}

.needs_content_list h2:before {
    display: inline-block;
    width: 5px;
    content: '';
    height: 25px;
    vertical-align: middle;
    margin-right: 10px;
    position: absolute;
    left: 0;
    background: rgb(232, 0, 0);
    border-radius: 5px;
}

.needs_content_list h2 a {
    display: block;
    width: 110px;
    height: 30px;
    font-size: 16px;
    color: #fff;
    background: #e80000;
    line-height: 30px;
    text-align: center;
    float: right;
    border-radius: 5px;
}

.needs_content_list h2 a i {
    margin-right: 5px;
}

.needs_content_list table {
    width: 100%;
    /* overflow: hidden; */
    border: 1px solid #d7d7d7;
    border-collapse: collapse;
    margin-top: 30px;
}

.needs_content_list table tr {
    width: 100%;
    height: 40px;
    font-size: 15px;
}
.needs_content_list table tr td{
    border: 1px solid #d7d7d7;
}

.needs_content_list table tr td:first-child {
    color: #878787;
    width: 12%;
    height: 100%;
    text-align: center;
    line-height: 40px;
}

.needs_content_list table tr td:first-child+td {
    color: #333;
    width: 88%;
    padding-left: 30px;
}

.needs_content_list table tr td:first-child+td ul {
    width: 100%;
}

.needs_content_list table tr td:first-child+td ul li {
    display: inline-block;
    padding: 2px 10px;
    margin-left: 22px;
    background: #f1f5f7;
    cursor: pointer;
}

.needs_content_list table tr td:first-child+td ul li:first-child {
    margin-left: 0;
}

.selected {
    background: #e80000 !important;
    color: #fff !important;
}

.needs_content_list table tr td:first-child+td a {
    display: inline-block;
    width: 58px;
    height: 22px;
    text-align: center;
    line-height: 22px;
    color: #333;
    border: 1px solid #d7d7d7;
    background: #fff;
    margin-left: 20px;
    border-radius: 5px;
}

.needs_content_list .screen {
    width: 100%;
    height: 40px;
    background: #f2f4f5;
    padding: 0 22px;
    margin-top: 10px;
}

.screen .fl {
    float: left;
    height: 100%;
}

.screen .fl ul {
    height: 100%;
    padding: 5px 0;
}

.screen .fl ul li {
    width: 90px;
    height: 100%;
    border: 1px solid #d7d7d7;
    line-height: 28px;
    text-align: center;
    display: block;
    color: #333;
    cursor: pointer;
    float: left;
    margin-right: 5px;
}

.liin {
    color: #e80000 !important;
    border-color: #e80000 !important;
}

.screen .fl ul li span {
    display: block;
    float: right;
    /* width: 15px; */
    height: 100%;
    margin-right: 5px;
}

.screen .fl ul li span b {
    display: block;
    font-size: 16px;
    /* width: 100%; */
    height: 50%;
    line-height: 0.7;
}

.screen .fl ul li span b:first-child {
    -ms-filter: "progid:DXImageTransform.Microsoft.Matrix(M11=-1, M12=1.2246467991473532e-16, M21=-1.2246467991473532e-16, M22=-1, SizingMethod='auto expand')";
    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    -o-transform: rotate(180deg);
    transform: rotate(180deg);
}

.screen .fl ul li span b:hover {
    color: #409fff !important;
    font-weight: bold;
}

.screen .fr {
    float: right;
    padding: 5px 0;
}

.screen .fr input {
    width: 200px;
    line-height: 28px;
    border: 1px solid #d7d7d7;
    text-indent: 5px;
    border-radius: 5px 0 0 5px;
    height: 30px;
}

.screen .fr b {
    display: inline-block;
    height: 30px;
    width: 65px;
    background: #e80000;
    text-align: center;
    line-height: 30px;
    color: #fff;
    font-weight: bold;
    margin-left: -4px;
    border-radius: 0 5px 5px 0;
    cursor: pointer;
}

input::-webkit-input-placeholder {
    color: #929292;
}

input::-moz-placeholder {
    /* Mozilla Firefox 19+ */
    color: #929292;
}

input:-moz-placeholder {
    /* Mozilla Firefox 4 to 18 */
    color: #929292;
}

input:-ms-input-placeholder {
    /* Internet Explorer 10-11 */
    color: #929292;
}

.show_items {
    width: 100%;
    overflow: hidden;
    margin-top: 20px;
}

.show_items ul {
    width: 100%;
    overflow: hidden;
}

.show_items ul li {
    display: inline-block;
    width: 285px;
    border: 1px solid #d7d7d7;
    margin: 0 6px 20px 6px;
    cursor: pointer;
}

.show_items ul li .needs_title {
    width: 100%;
    height: 115px;
    border-bottom: 1px solid #d7d7d7;
    padding: 20px 0 0 0;
}

.show_items ul li .needs_title p {
    color: #9f9f9f;
    font-size: 15px;
    padding-left: 20px;
}

.show_items ul li .needs_title p:first-child {
    font-size: 18px;
    color: #333;
    width: 220px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    position: relative;
    margin-bottom: 27px;
}

.show_items ul li .needs_title p:first-child:before {
    display: inline-block;
    content: '';
    width: 3px;
    height: 18px;
    background: #409fff;
    position: absolute;
    left: 0;
    top: 3px;
    border-radius: 10px;
}

.show_items ul li .needs_title p b {
    padding: 5px 4px;
    background: #409fff;
    color: #fff;
    margin-left: 8px;
}

.show_items ul li a {
    display: block;
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: #5381e7;
    font-size: 18px;
    border-top: 1px solid #d7d7d7;
}

.show_items ul li:hover a {
    color: #e80000;
}

.needs_details {
    width: 100%;
    color: #9f9f9f;
    font-size: 15px;
    padding: 20px 0 20px 20px;
}

.needs_details p {
    width: 100%;
    line-height: 1.7;
}

.needs_details b {
    color: #747474;
}

.needs_details i {
    font-size: 16px;
    color: #fc9e53;
    margin-top: 20px;
    display: block;
}
