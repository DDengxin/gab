.aca-fl {
    width: 100%;
    overflow: hidden;
    padding-bottom: 92px;
}

.aca-fl .title {
    width: 100%;
    overflow: hidden;
    padding-top: 30px;
}

.aca-fl .title h4 {
    width: 100%;
    text-align: center;
    font-size: 18px;
    color: #409fff;
    margin-bottom: 19px;
    font-weight: bold;
}

.aca-fl .title p {
    width: 100%;
    text-align: center;
    font-size: 14px;
    color: #409fff;
    margin-bottom: 19px;
}

.aca-fl_details {
    width: 100%;
    overflow: hidden;
}

.aca-fl_details div {
    width: 100%;
    margin-bottom: 40px;
    font-size: 14px;
    color: #666666;
    overflow: hidden;
}

.aca-fl_details div p {
    width: 100%;
    margin-bottom: 15px;
    line-height: 1.7;
}

.pay {
    width: 100%;
    text-align: center;
    overflow: hidden;
    font-size: 14px;
    color: #666666;
    border-top: 1px solid #ececec;
    padding-top: 22px;
}

.pay p {
    margin-bottom: 10px;
}

.pay button {
    width: 135px;
    height: 40px;
    background: #ec0a0a;
    color: #fff;
    font-size: 18px;
    text-align: center;
    line-height: 40px;
    border: none;
    cursor: pointer;
}

.pay button i {
    margin-right: 5px;
    font-size: 18px;
}