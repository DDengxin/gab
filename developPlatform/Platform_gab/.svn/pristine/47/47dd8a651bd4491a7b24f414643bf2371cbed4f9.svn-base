.input_box {
    /* border: 1px solid #ccc; */
    /* padding: 4px 8px; */
    color: #555;
    border-radius: 4px;
    display: inline-block;
    width: 870px;
    /* float: right; */
    margin-left: 20px;
}

.input_box .input_tags {
    display: none
}

.input_box .input_content {
    width: 333px;
    height: 34px;
    line-height: 34px;
    border-radius: 5px;
    padding: 0 15px;
    outline-style: none;
    border: 1px solid #c8c8c8;
    color: #666;
}

.input_box a {
    border: 1px solid #ccc;
    padding: 0px 4px;
    background-color: #f5f5f5;
    border-radius: 2px;
    cursor: pointer;
    display: inline-block;
    color: #666;
    text-decoration: none;
    margin-right: 5px;
}

.input_box span {
    font-size: 14px;
    line-height: 13px;
    width: auto !important;
}

.input_box em {
    display: inline-block;
    margin-left: 5px;
    width: 13px;
    height: 13px;
    overflow: hidden;
    cursor: pointer;
    background: url(../images/close.png) center center no-repeat
}

.formcl {
    width: 500px
}
