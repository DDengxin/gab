    //     console.log(data);
    //     return false;
    // })

    // 总件数
    var num = 0;
    $("table tr").each(function (i, e) {
        if (i > 0) num += parseInt($(e).find("td:eq(3)>em").text());
        return num;
    });
    $('.summary').find("div:eq(0)>span").text(num);

    // 商品总计
    var total = 0;
    $("table tr").each(function (i, e) {
        if (i > 0) total += parseInt($(e).find("td:eq(4)>em").text());
