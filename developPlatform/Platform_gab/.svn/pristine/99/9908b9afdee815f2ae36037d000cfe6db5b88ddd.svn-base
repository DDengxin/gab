.needs_content {
    width: 100%;
    overflow: hidden;
    margin-top: 125px;
}

.needs_content_list {
    width: 1200px;
    overflow: hidden;
    margin: 0 auto;
    padding-bottom: 135px;
}

.needs_content_list h2 {
    width: 100%;
    padding-bottom: 10px;
    border-bottom: 1px solid #d7d7d7;
    font-size: 18px;
    color: #333333;
    position: relative;
    padding-left: 15px;
    font-weight: bold;
}

.needs_content_list h2:before {
    display: inline-block;
    width: 5px;
    content: '';
    height: 25px;
    vertical-align: middle;
    margin-right: 10px;
    position: absolute;
    left: 0;
    background: rgb(232, 0, 0);
    border-radius: 5px;
}

.needs_content_list h2 a {
    display: block;
    width: 110px;
    height: 30px;
    font-size: 16px;
    color: #fff;
    background: #e80000;
    line-height: 30px;
    text-align: center;
    float: right;
    border-radius: 5px;
}

.needs_content_list h2 a i {
    margin-right: 5px;
}

.needs_content_list table {
    width: 100%;
    /* overflow: hidden; */
    border: 1px solid #d7d7d7;
    border-collapse: collapse;
    margin-top: 30px;
}

.needs_content_list table tr {
    width: 100%;
    height: 40px;
    font-size: 14px;
}
.needs_content_list table tr td{
    border: 1px solid #d7d7d7;
}

.needs_content_list table tr td:first-child {
    color: #878787;
    width: 12%;
    height: 100%;
    text-align: center;
    line-height: 40px;
}

.needs_content_list table tr td:first-child+td {
    color: #333;
    width: 88%;
    padding-left: 30px;
}

.needs_content_list table tr td:first-child+td ul {
    width: 100%;
}

.needs_content_list table tr td:first-child+td ul li {
    display: inline-block;
    padding: 2px 10px;
    margin-left: 22px;
    background: #f1f5f7;
    cursor: pointer;
}

.needs_content_list table tr td:first-child+td ul li:first-child {
    margin-left: 0;
}

.selected {
    background: #e80000 !important;
    color: #fff !important;
}

.needs_content_list table tr td:first-child+td a {
    display: inline-block;
    width: 58px;
    height: 22px;
    text-align: center;
    line-height: 22px;
    color: #333;
    border: 1px solid #d7d7d7;
    background: #fff;
    margin-left: 20px;
    border-radius: 5px;
}

.needs_content_list .screen {
    width: 100%;
    height: 40px;
    background: #f2f4f5;
    padding: 0 22px;
    margin-top: 10px;
}

.screen .fl {
    float: left;
    height: 100%;
}

.screen .fl ul {
    height: 100%;
    padding: 5px 0;
}

.screen .fl ul li {
    width: 90px;
    height: 100%;
    border: 1px solid #d7d7d7;
    line-height: 28px;
    text-align: center;
    display: inline-block;
    color: #333;
    cursor: pointer;
}

.liin {
    color: #e80000 !important;
    border-color: #e80000 !important;
}

.screen .fl ul li span {
    display: block;
    float: right;
    width: 15px;
    height: 100%;
    margin-right: 5px;
}

.screen .fl ul li span b {
    display: block;
    font-size: 16px;
    width: 17px;
    height: 50%;
    line-height: 0.7;
}

.screen .fl ul li span b:first-child {
    -ms-filter: "progid:DXImageTransform.Microsoft.Matrix(M11=-1, M12=1.2246467991473532e-16, M21=-1.2246467991473532e-16, M22=-1, SizingMethod='auto expand')";
    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    -o-transform: rotate(180deg);
    transform: rotate(180deg);
}

.screen .fl ul li span b:hover {
    color: #409fff !important;
    font-weight: bold;
}

.screen .fr {
    float: right;
    padding: 5px 0;
}

.screen .fr input {
    width: 200px;
    line-height: 28px;
    border: 1px solid #d7d7d7;
    text-indent: 5px;
    border-radius: 5px 0 0 5px;
    height: 30px;
    font-size: 14px;
}

.screen .fr b {
    display: inline-block;
    height: 30px;
    width: 65px;
    background: #e80000;
    text-align: center;
    line-height: 30px;
    color: #fff;
    font-weight: bold;
    margin-left: -4px;
    border-radius: 0 5px 5px 0;
    cursor: pointer;
    font-size: 14px;
}

input::-webkit-input-placeholder {
    color: #929292;
}

input::-moz-placeholder {
    /* Mozilla Firefox 19+ */
    color: #929292;
}

input:-moz-placeholder {
    /* Mozilla Firefox 4 to 18 */
    color: #929292;
}

input:-ms-input-placeholder {
    /* Internet Explorer 10-11 */
    color: #929292;
}

.show_items {
    width: 100%;
    overflow: hidden;
    margin-top: 20px;
}

.show_items ul {
    width: 100%;
    overflow: hidden;
    text-align: justify;
}

.show_items ul:after {
    content: '';
    display: inline-block;
    width: 100%;
}

.show_items ul li {
    display: inline-block;
    width: 575px;
    border-bottom: 1px solid #d7d7d7;
    margin: 0 0 25px 0;
    padding: 25px 50px 25px 0;
    cursor: pointer;
    overflow: hidden;
    position: relative;
}

.show_items ul li img {
    width: 170px;
    height: 170px;
    margin-right: 33px;
    float: left;
    border: 1px solid #dcdcdc;
}

.show_items ul li .goods_title {
    width: 60%;
    height: 100%;
    overflow: hidden;
    float: left;
}

.show_items ul li .goods_title h3 {
    font-size: 18px;
    font-weight: bold;
    color: rgb(51, 51, 51);
    line-height: 1.8;
}

.show_items ul li .goods_title p {
    color: rgb(15, 15, 15);
    font-size: 14px;
    line-height: 2;
}

.show_items ul li .goods_title p b {
    display: inline-block;
    width: 150px;
}

.show_items ul li .goods_title p a {
    color: #409fff;
}

.show_items ul li .goods_title .goods_company{
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: keep-all;
}


.show_items ul li>a {
    display: block;
    width: 98px;
    height: 40px;
    line-height: 38px;
    text-align: center;
    color: #409fff;
    font-size: 16px;
    border: 1px solid #409fff;
    margin-top: 50px;
    position: absolute;
    right: 40px;
}

.show_items ul li:hover>a {
    color: #e80000;
    border: 1px solid #e80000;
}

.layui-progress {
    width: 50%;
    position: relative;
    top: -15px;
    left: 70px;
    height: 6px;
    border-radius: 20px;
    background-color: #e2e2e2;
}

.layui-progress-text {
    position: relative;
    top: -8px !important;
    left: 115px;
    line-height: 18px;
    font-size: 12px;
    color: #666;
}

#page {
    position: relative;
}

.layui-laypage {
    position: absolute;
    bottom: 0;
    top: 25px;
    left: 50%;
    transform: translateX(-50%);
}

.layui-laypage .layui-laypage-curr .layui-laypage-em {
    background-color: rgb(232, 0, 0) !important;
}