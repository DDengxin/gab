.container {
    padding-left: 40px;
}

.container form {
    padding: 0 !important;
}

.container>.layui-form-item input {
    background: rgb(246, 246, 246);
}

.layui-form [lay-ignore] {
    display: block !important;
}

.layui-form-checkbox[lay-skin=primary] {
    position: absolute;
    top: 0;
    left: 44.5%;
}

.layui-form-checked[lay-skin=primary] i {
    border-color: #e80000!important;
    background-color: #e80000 !important;
}

.layui-form-checkbox[lay-skin=primary]:hover i {
    border-color: #e80000!important;
}

#operationPeriod {
    width: 42% !important;
}

.inputWidth {
    width: 70% !important;
}

select {
    width: 20% !important;
    height: 38px;
    float: left;
    margin-right: 15px;
    border: 1px solid #e6e6e6;
    padding-left: 10px;
    color: rgb(103, 103, 103);
}

input {
    color: rgb(103, 103, 103) !important;
}

.notice-success, .notice-fail, .notice-loading {
    color: #409fff;
    font-size: 16px;
    margin-left: 250px;
    margin-top: 100px;
}

.notice-success p, .notice-fail p, .notice-loading p {
    font-size: 24px;
    /* font-weight: bold; */
    margin-bottom: 32px;
}

.notice-success p i, .notice-fail p i, .notice-loading p i {
    font-size: 25px;
    margin-right: 12px;
}

.notice-success ul li {
    margin-bottom: 32px;
}
.submit{
    width: 175px;
    height: 46px;
    text-align: center;
    line-height: 46px;
    color: #fff;
    background: #e80000;
    font-size: 20px;
    margin: 110px 180px 0;
    cursor: pointer;
}
.submit:hover{
    background: #409fff;
}