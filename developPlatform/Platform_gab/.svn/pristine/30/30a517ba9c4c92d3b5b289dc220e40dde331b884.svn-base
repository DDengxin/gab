table {
    width: 100%;
    /* overflow: hidden; */
    border: 1px solid #d7d7d7;
    border-collapse: collapse;
    margin-top: 30px;
}

 table tr {
    width: 100%;
    height: 40px;
    font-size: 14px;
}
table tr td{
    border: 1px solid #d7d7d7;
}

 table tr td:first-child {
    color: #878787;
    width: 12%;
    height: 100%;
    text-align: center;
    line-height: 40px;
}

 table tr td:first-child+td {
    color: #333;
    width: 88%;
    padding-left: 30px;
}

 table tr td:first-child+td ul {
    width: 100%;
}

 table tr td:first-child+td ul li {
    display: inline-block;
    padding: 2px 10px;
    margin-left: 22px;
    background: #f1f5f7;
    cursor: pointer;
}

 table tr td:first-child+td ul li:first-child {
    margin-left: 0;
}

.selected {
    background: #e80000 !important;
    color: #fff !important;
}

 table tr td:first-child+td a {
    display: inline-block;
    width: 58px;
    height: 22px;
    text-align: center;
    line-height: 22px;
    color: #333;
    border: 1px solid #d7d7d7;
    background: #fff;
    margin-left: 20px;
    border-radius: 5px;
}

 .screen {
    width: 100%;
    height: 40px;
    background: #f2f4f5;
    padding: 0 22px;
    margin-top: 10px;
}

.screen .fl {
    float: left;
    height: 100%;
}

.screen .fl ul {
    height: 100%;
    padding: 5px 0;
}

.screen .fl ul li {
    width: 90px;
    height: 100%;
    border: 1px solid #d7d7d7;
    line-height: 28px;
    text-align: center;
    display: inline-block;
    color: #333;
    cursor: pointer;
}

.liin {
    color: #e80000 !important;
    border-color: #e80000 !important;
}

.screen .fl ul li span {
    display: block;
    float: right;
    width: 15px;
    height: 100%;
    margin-right: 5px;
}

.screen .fl ul li span b {
    display: block;
    font-size: 16px;
    width: 17px;
    height: 50%;
    line-height: 0.7;
}

.screen .fl ul li span b:first-child {
    -ms-filter: "progid:DXImageTransform.Microsoft.Matrix(M11=-1, M12=1.2246467991473532e-16, M21=-1.2246467991473532e-16, M22=-1, SizingMethod='auto expand')";
    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    -o-transform: rotate(180deg);
    transform: rotate(180deg);
}

.screen .fl ul li span b:hover {
    color: #409fff !important;
    font-weight: bold;
}

.screen .fr {
    float: right;
    padding: 5px 0;
}

.screen .fr input {
    width: 200px;
    line-height: 28px;
    border: 1px solid #d7d7d7;
    text-indent: 5px;
    border-radius: 5px 0 0 5px;
    height: 30px;
}

.screen .fr b {
    display: inline-block;
    height: 30px;
    width: 65px;
    background: #e80000;
    text-align: center;
    line-height: 30px;
    color: #fff;
    font-weight: bold;
    margin-left: -4px;
    border-radius: 0 5px 5px 0;
    cursor: pointer;
}

input::-webkit-input-placeholder {
    color: #929292;
}

input::-moz-placeholder {
    /* Mozilla Firefox 19+ */
    color: #929292;
}

input:-moz-placeholder {
    /* Mozilla Firefox 4 to 18 */
    color: #929292;
}

input:-ms-input-placeholder {
    /* Internet Explorer 10-11 */
    color: #929292;
}