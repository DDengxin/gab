</head>

<body>
	<th:block th:replace="~{gab/common/CommonHead:: CommonHead}">
	</th:block>
	<div id="content" class="expert_content">
		<div class="expert_content_list">
			<p class="changeTitle"></p>

			<div class="screen">
				<div class="fl">
					<dl>
						<dt>热门搜索:</dt>
						<dd>CNC加工</dd>
						<dd>3D打印</dd>
						<dd>模型定制</dd>
					</dl>
				</div>
				<div class="fr">
					<input id="searchContent" type="text" placeholder="请输入搜索内容">
					<b id="search">搜索</b>
				</div>
			</div>
			<ul id="tablist">
				<li class="firm liJj">夹具厂商</li>
				<li class="firm liFj">辅件厂商</li>
				<li class="firm liHh">整合厂商</li>
				<li class="firm liTs">特色经贸商</li>
			</ul>
			<div class="content-box">
				<div class="content jzj_content">
					<ul id="jj">
					</ul>
					<div id="page1"></div>
				</div>

				<div class="content jzj_content">
					<ul id="fj">
						
					</ul>
					<div id="page2"></div>
				</div>

				<div class="content jzj_content">
					<ul id="hh">
						
					</ul>
					<div id="page3"></div>
				</div>
				<div class="content jzj_content">
					<ul id="ts">
						
					</ul>
					<div id="page4"></div>
				</div>
				<!-- 专家团队 start -->
				<div class="content contentin">
					<ul></ul>
					<div id="page5"></div>
				</div>
				<!-- 专家团队end -->
			</div>
		</div>
		<th:block th:replace="~{gab/common/CommonFooter:: CommonFooter}">
		</th:block>
		<script>

			var expert_type = "";
			var teamPage = "team"
			//专家团队
			if (expert_type == "team") {
				//查询所有专家
			} else if (expert_type == "artTeam") {
				//工艺专家
			} else if (expert_type == "saleBeforeTeam") {
				//售前专家
			} else if (expert_type == "=afterBeforeTeam") {
				//售后专家
			}

			var cur = "[[${cur}]]";
			console.log(cur)
			var pageSize = 8;
			var pageIndex = 1;
			var total = 1;
			var firmPage = "page1";
			var searchs

			findSupply();

			function findSupply() {
				if (cur == "jj") {
					firmPage = "page1";
				} else if (cur == "fj") {
					firmPage = "page2";
				} else if (cur == "hh") {
					firmPage = "page3";
				} else if (cur == "ts") {
					firmPage = "page4";
				}
				$.ajax({
					url : '/gab/allChange/' + cur + "/" + pageSize + "/" + pageIndex,
					type : 'GET',
					async : true,
					success : function(res) {
						total = res.total;
						drawing(res.data);
						pageView();
					}
				});
			}

			function search() {
				first = true;
				searchs = $('#searchContent').val();
				findSuplyByKeyName();
			}

			function findSuplyByKeyName() {
				$.ajax({
					url: "/gab/allChangeByName",
					type: 'POST',
					async: true,
					data: {
						cur:cur,
						searchs: searchs,
						pageSize: pageSize,
						pageIndex: pageIndex
					},
					success: function (res) {
						total = res.total;
						drawing(res.data);
						pageView();
					}
				});
			}




			function pageView() {
				layui.use('laypage', function() {
					var laypage = layui.laypage
					laypage.render({
						elem : firmPage,
						count : total,
						limit : 8,
			            layout:['prev', 'page', 'next','skip'],
						jump : function(obj, first) {
							if (!first) {
								firmPage = obj.elem;
								pageIndex = obj.curr;
								$.ajax({
									url : '/gab/allChange/' + cur + "/" + pageSize + "/" + pageIndex,
									type : 'GET',
									async : true,
									success : function(res) {
										total = res.total;
										drawing(res.data);
									}
								});
							}
						}
					});
				});
			}

			function drawing(res) {
				for (var i = 0; i < res.length; i++) {
					if (res[i].keyWord != null)
						res[i].keyWord = res[i].keyWord.split(",");
				}
				var data = {
					"list" : res
				}
				var getTpl = demo.innerHTML, view = document.getElementById(cur);
				laytpl(getTpl).render(data, function(html) {
					view.innerHTML = html;
				});
			}

			$(".firm").click(function(e) {
				pageIndex = 1;
				var text = $(this).text();
				if (e.currentTarget.innerText == "夹具厂商") {
					cur = "jj";
					firmPage = "page1";
				} else if (e.currentTarget.innerText == "辅件厂商") {
					cur = "fj";
					firmPage = "page2";
				} else if (e.currentTarget.innerText == "混合厂商" || e.currentTarget.innerText=="整合厂商") {
					cur = "hh";
					firmPage = "page3";
				} else if (e.currentTarget.innerText == "特色经贸商") {
					cur = "ts";
					firmPage = "page4";
				}
				$.ajax({
					url : '/gab/allChange/' + cur + "/" + pageSize + "/" + pageIndex,
					type : 'GET',
					async : true,
					success : function(res) {
						total = res.total;
						drawing(res.data);
						pageView();
					}
				});

			});
		</script>
</body>
</html>