				if(type=="product"){
					$('form')[0].reset();
					needImg();
					needFile();
					makingPlanFile();
				}else if(type=="service"){
					$('form')[1].reset();
					productDrawingFile();
					productImg();
					productFile();
				}
			} else {
				layui.use('layer', function () {
					var layer = layui.layer;
					layer.msg('提交失败', { time: 5000, icon: 5 });
				});
			}
		}
	});
}
